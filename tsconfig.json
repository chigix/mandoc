{
    "extends": "./tsconfig/tsconfig.base.json",
    "compilerOptions": {
        "types": [
            "node",
            "jest",
        ],
        "lib": [
            "es2015",
            "es2017",
            "dom",
        ],
        "baseUrl": ".",
        "paths": {
            "mandoc": [
                "./src/index"
            ],
            "mandoc/*": [
                "./src/*"
            ],
            "mandoc-test": [
                "./test"
            ],
            "mandoc-test/*": [
                "./test/*"
            ],
            "mandoc-tpl/*": [
                "./templates/*"
            ]
        }
    },
    "include": [
        "src",
        "build",
        "test"
    ],
}