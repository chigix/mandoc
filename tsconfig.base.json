{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "stripInternal": true,
    "target": "es5",
    "lib": [
      "es5",
      "es2015.core",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "dom",
    ]
  },
  "exclude": [
    "./node_modules",
  ]
}