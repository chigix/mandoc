{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "strict": true,
        "lib": [
            "es2015",
            "es2017",
            "dom",
        ],
        "module": "commonjs",
        "noImplicitReturns": true,
        "outDir": "../dist/",
        "sourceMap": true,
        "types": [
            "node"
        ],
        "target": "es6"
    },
    "compileOnSave": true,
    "include": [
        "../src"
    ],
    "exclude": [
        "../node_modules",
        "../dist",
    ]
}